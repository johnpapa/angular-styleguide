{
  "name": "webpack-demo",
  "version": "1.0.0",
  "description": "hackernews showcase using typescript && egg",
  "scripts": {
    "dev": "webpack-dev-server --mode development --inline --hot",
    "build": "npm run build-serve && npm run build-client",
    "start": "egg-scripts start",
    "client": "webpack --watch",
    "serve": "egg-bin dev -r egg-ts-helper/register",
    "debug": "egg-bin debug -r egg-ts-helper/register",
    "test-local": "egg-bin test -r egg-ts-helper/register",
    "test": "npm run lint -- --fix && npm run test-local",
    "cov": "egg-bin cov -r egg-ts-helper/register",
    "build-client": "webpack --mode production",
    "build-serve": "ets && tsc -p tsconfig.json",
    "ci": "npm run lint && npm run cov && npm run tsc",
    "autod": "autod",
    "lint": "tslint .",
    "clean": "ets clean"
  },
  "keywords": [
    "egg",
    "typescript"
  ],
  "author": "James Liauw",
  "license": "ISC",
  "dependencies": {
    "jquery": "^3.3.1",
    "egg": "^2.6.0",
    "egg-scripts": "^2.6.0",
    "egg-view-nunjucks": "^2.2.0",
    "moment": "^2.22.0"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.1",
    "@types/mocha": "^2.2.40",
    "@types/node": "^7.0.12",
    "@types/supertest": "^2.0.0",
    "autod": "^3.0.1",
    "autod-egg": "^1.1.0",
    "cheerio": "^1.0.0-rc.2",
    "egg-bin": "^4.6.2",
    "egg-mock": "^3.16.0",
    "egg-ts-helper": "^1.4.2",
    "tslib": "^1.9.0",
    "tslint": "^4.0.0",
    "autoprefixer": "^8.4.1",
    "babel": "^6.23.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "glob": "^7.1.2",
    "html-webpack-plugin": "^3.2.0",
    "html-withimg-loader": "^0.1.16",
    "less": "^3.0.2",
    "less-loader": "^4.1.0",
    "postcss-loader": "^2.1.4",
    "purify-css": "^1.2.5",
    "purifycss-webpack": "^0.7.0",
    "style-loader": "^0.21.0",
    "ts-loader": "^4.3.0",
    "tsconfig-paths-webpack-plugin": "^3.1.3",
    "typescript": "^2.9.1",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "url-loader": "^1.0.1",
    "webpack": "^4.10.2",
    "webpack-cli": "^2.1.2",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.2",
    "co-mocha": "^1.2.2",
    "mocha": "^1.18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jamesliauw/angular-styleguide"
  },
  "engines": {
    "node": ">=8.9.0"
  }
}
